rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin/superadmin
    function isAdmin() {
      return request.auth != null && 
        (request.auth.token.email == 'jacqueslaurine@live.be' || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
    }

    // Rules for Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      // Only superadmins can change roles
      allow update: if isAdmin();
      
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Rules for Courses collection
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Rules for User Progress collection
    match /userProgress/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for Sessions collection
    match /sessions/{sessionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Rules for Notifications collection
    match /notifications/{notificationId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.userId == 'all');
      allow write: if isAdmin();
      // Allow users to mark their own notifications as read (update)
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Rules for Listening Keys collection
    match /listening-lessons/{lessonId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Admin access to Users
    match /users/{userId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
    }
    
    // Admin access to User Progress
    match /userProgress/{userId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
    }
    
    // Resource Library
    match /resources/{resourceId} {
      allow read: if request.auth != null; // Students can see resources
      allow write: if isAdmin(); // Only admin can edit
    }

    // Submissions (Coaching)
    match /submissions/{submissionId} {
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow read: if request.auth != null; // && (resource.data.studentId == request.auth.uid || isAdmin());
      allow update: if request.auth != null && (isAdmin() || resource.data.studentId == request.auth.uid);
    }

    // Planned Lessons
    match /planned_lessons/{lessonId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }
  }
}


